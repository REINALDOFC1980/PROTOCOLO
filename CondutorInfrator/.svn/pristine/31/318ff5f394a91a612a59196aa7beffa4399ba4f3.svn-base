using System.ComponentModel;
using System.ComponentModel.DataAnnotations;

namespace CondutorInfrator.Models
{
    public class UsuarioModel

    {
        //Cadastro Usuario
        [DisplayName("Login")]
        public string Usu_Login { get; set; }

        [DataType(DataType.Password)]
        [DisplayName("Senha")]
        public string Usu_Senha { get; set; }

        [DataType(DataType.Password)]
        [DisplayName("Confirmar Senha")]
        public string Usu_ConfirmarSenha { get; set; }

        [DisplayName("Confirmar E-mail")]
        public string Usu_ConfimacaoEmail { get; set; }

        [DisplayName("E-mail")]
        public string Usu_Email { get; set; }

        [DisplayName("Codigo Confirmação")]
        public int Usu_CodigoConfirmacao { get; set; }

        [DisplayName("Confirmacao")]
        public bool Pes_Confirmacao { get; set; }
    }
}